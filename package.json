{
  "name": "redant-home",
  "version": "1.3.18",
  "description": "Red Ant Website.",
  "main": "src/index.js",
  "author": "Jason Taylor <jason@redant.com.au>",
  "private": true,
  "scripts": {
    "start": "yarn setup && concurrently 'yarn start:webpack' 'yarn start:jekyll'",
    "start:webpack.xx": "webpack-dev-server --host 0.0.0.0 --disable-host-check",
    "start:jekyll.xx": "bundle exec jekyll build --watch",
    "start:webpack": "webpack --watch",
    "start:jekyll": "bundle exec jekyll serve",
    "build": "yarn setup && yarn build:webpack && yarn build:jekyll && yarn amp:copy",
    "build:webpack": "NODE_ENV=production webpack -p --bail --progress --profile",
    "build:jekyll": "JEKYLL_ENV=production bundle exec jekyll build --config _config.yml",
    "setup": "yarn clean && concurrently 'yarn install:jekyll' 'yarn install:webpack' && yarn amp:build && yarn amp:clean",
    "clean": "rimraf ./_site ./assets",
    "amp:build": "webpack && ln -fs ${PWD}/assets/amp.css ${PWD}/_includes/amp.css",
    "amp:copy": "cp assets/amp.*.css _includes",
    "amp:clean": "yarn clean:important && yarn clean:msviewport",
    "clean:important": "sed -i'' -e 's/!important//g' assets/amp.css",
    "clean:msviewport": "sed -i'' -e 's/@-ms-viewport//g' assets/amp.css",
    "install:jekyll": "bundle check || bundle install",
    "install:webpack": "yarn check || yarn install",
    "release": "release-it",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint './src/**/*.scss'",
    "lint:js": "eslint ./src/**/*.js"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "aos": "^2.2.0",
    "autoprefixer": "^7.1.5",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "bootstrap": "4.0.0-beta.2",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "node-sass": "^4.5.3",
    "parallax-js": "^3.1.0",
    "popper.js": "^1.12.6",
    "postcss-loader": "^2.0.8",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "slick-carousel": "^1.8.1",
    "style-loader": "^0.19.0",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.2",
    "webpack-manifest-plugin": "^1.3.2"
  },
  "devDependencies": {
    "eslint": "4.10.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "prettier": "^1.7.4",
    "release-it": "2",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-scss": "^2.1.0"
  }
}
